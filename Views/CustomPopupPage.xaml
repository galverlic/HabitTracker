<!-- CustomPopupPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.CustomPopupPage">

    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <!-- Semi-transparent background -->
        <BoxView Color="#C0808080" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"/>

        <!-- Popup content -->
        <Frame AbsoluteLayout.LayoutBounds="0.5,0.5,300,200"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               Padding="20" BackgroundColor="White" CornerRadius="15">
            <StackLayout Spacing="15">
                <Label Text="Congrats! You completed your habit for the day!"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand" />
                <!-- Add more content if needed -->
            </StackLayout>
        </Frame>
    </AbsoluteLayout>

</ContentPage>
